{{> header}}

<script src="/js/libs/moment.js"></script>
<script src="/js/updateMeta.js"></script>

    <!-- /.row -->
    <div class="row">
        <div class="col-lg-10 col-lg-offset-1">
            <div class="panel panel-default">
                <div id="lastUpdate" class="panel-heading">
                  <script>
                   var lu = `Last Updated: ${moment().format('h:mm:ss A')} </br> Listed by most recent added and updates every 5 minutes`;
                   $("#lastUpdate").html(lu);
                  </script>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                              <th><h3>First Name</h3></th>
                              <th><h3>Last Name</h3></th>
                              <th><h3>Fish</h3></th>
                              <th><h3>Weight</h3></th>
                              <th><h3>Time</h3></th>
                            </tr>
                        </thead>
                        <tbody>
                          {{#each data}}
                          <tr>
                            <td><h4>{{firstName}}</h4></td>
                            <td><h4>{{lastName}}</h4></td>
                            <td><h4>{{fish}}</h4></td>
                            <td><h4>{{weight}}</h4></td>
                            <td>
                              <h4>
                              <script>
                                 var str = moment({{createdAt}}).format('h:mm:ss A');
                                 $("h4:last").html(str);
                              </script>
                              </h4>
                            </td>
                          </tr>
                          {{/each}}
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                  </div>
                </div>
              </div>
            </div>


  </div>


  <script src="/js/infiniteScroll.js"></script>
  </body>

</html>
