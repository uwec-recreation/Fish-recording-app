{{> header}}

    <div class="centered-form">
      <div class="centered-form__form">
        <form action="/contestants" method="POST">
          <div class="form-field">
            <h3>Angler Data</h3>
          </div>
          <div class="form-field">
            <label>Ticket Number</label>
            <input type="number" name="ticketNumber" autocomplete="off" autofocus>
          </div>
          <div class="form-field">
            <label>First Name</label>
            <input type="text" name="firstName" autocomplete="off" autofocus>
          </div>
          <div class="form-field">
            <label>Last Name</label>
            <input type="text" name="lastName" autocomplete="off" autofocus>
          </div>

          <div class="form-field">
            <label>Fish Species</label>
            <select name="fish">
              <option value=""></option>
              <option value="fish1">Fish1</option>
              <option value="fish2">Fish2</option>
              <option value="fish3">Fish3</option>
              <option value="fish4">Fish4</option>
            </select></div>
          <div class="form-field">
            <label>Weight (lb)</label>
            <input type="number" step=.01 autocomplete="off" name="ticketNumber">
          </div>
          <div class="form-field">
            <button type="submit">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
