{{> header}}
    <div class="centered-form">

      {{#if error}}
      <div class="centered-tab" id="error">
        {{error}}
      {{else}}
        {{#if success}}
        <div class="centered-tab" id="success">
          {{success}}
        {{else}}
        <div class="centered-tab">
        {{/if}}
      {{/if}}
      </div>




      <div class="centered-tab">
        <script src="/js/libs/moment.js"></script>
        <script src="/js/libs/jquery-3.2.1.min.js"></script>
        <script src="/js/delete.js"></script>

        <table class="list" style="width:100%">
          <tr>

            <th>Ticket #</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Fish</th>
            <th>Weight</th>
            <th>Time</th>
            <th>
            <section title=".slideThree">
                <!-- .slideThree -->
                <div class="slideThree">
                  <input type="checkbox" value="None" id="deleteCheck" name="check"/>
                  <label for="deleteCheck"></label>
                </div>
                <!-- end .slideThree -->
              </section>
            </th>

          </tr>
          {{#each data}}
          <form name="{{_id}}" action="/editData" method="POST" onsubmit="return confirm('Do you really want to Update/Delete?');">
            <tr>
              <td style="display: none;"><input type="text" name="id" value="{{_id}}" readonly></td>
              <td><input type="text" name="ticket" autocomplete="off" value={{ticket}}></td>
              <td><input type="text" name="firstName" autocomplete="off" value={{firstName}}></td>
              <td><input type="text" name="lastName" autocomplete="off" value={{lastName}}></td>
              <td>
                <select name="fish">
                  <option value="{{fish}}">{{fish}}</option>
                  <option value="fish1">fish1</option>
                  <option value="fish2">fish2</option>
                  <option value="fish3">fish3</option>
                  <option value="fish4">fish4</option>
                </select>
              </td>
              <td><input type="text" name="weight" autocomplete="off" value={{weight}}></td>
              <td>
                <script>
                   var str = moment({{createdAt}}).format('h:mm:ss A');
                   $("td:last").html(str);
                </script>
              </td>
              <td>
                <button id="update" type="submit">Update</button>
                <button id="delete" type="submit" formaction="/deleteTicket" style="background-color: #B33A3A;" hidden="hidden">Delete</button>
              </td>
            </tr>
          </form>
          {{/each}}
        </table>
      </div>

      <div class="centered-tab" id="info">
      </div>


    </div>


<script src="/js/delete.js"></script>
<script src="/js/messageClear.js"></script>

  </body>

</html>
